<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InfoAndroidApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InfoAndroidApp"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home"
             Icon="{FontImage FontFamily=FA6, Glyph=&#xe1b0;}">
            <ShellContent
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Daily Log"
             Icon="{FontImage FontFamily=FA6, Glyph=&#xf00b;}">
            <ShellContent
                ContentTemplate="{DataTemplate local:LogPage}"
                Route="LogPage" />
        </Tab>
        <Tab Title="Setup"
             Icon="{FontImage FontFamily=FA6, Glyph=&#xf4fe;}">
            <ShellContent
                ContentTemplate="{DataTemplate local:SetupPage}"
                Route="SetupPage" />
        </Tab>
    </TabBar>
</Shell>
